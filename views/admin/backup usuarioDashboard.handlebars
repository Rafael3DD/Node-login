<div class="container-fluid">
    <div class="row" id="dashboard-background">
        <div class="col-md-2 padding-0  mt-5" id="dashboard-esquerda">
            <div class="d-flex flex-column flex-shrink-0 text-white" id="sidebar">
                <ul class="nav nav-pills flex-column mb-auto">
                    <li>
                        <a href="/admin" class="nav-link">
                            <i class="fa-solid fa-house"></i>Dashboard
                        </a>
                    </li>
                    <li>
                        <a href="/admin/UsuarioDashboard" class="nav-link">
                            <i class="fa-solid fa-user"></i>
                            Usuários
                        </a>
                    </li>
                    <li>
                        <a href="/admin/PostagemDashboard" class="nav-link">
                        <i class="fa-regular fa-calendar-check"></i>
                            Postagens
                        </a>
                    </li>
                    <li>
                        <a href="/admin/CategoriaDashboard" class="nav-link">
                        <i class="fa-solid fa-arrow-right-from-bracket"></i>   
                            Categorias
                        </a>
                    </li>
                </ul>
                <hr>
            </div>
        </div>

            

        <div class="col-md-10 padding-0" id="dashboard-direita">
            <a href="/admin/registro"><button class="mt-4" id="btn-novousuario">Novo usuário</button></a>
            <h5 id="tabela" class="mt-3">Usuarios:</h5>
            <div class="row justify-content-center" id="tabela">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Nome</th>
                            <th scope="col">E-mail</th>
                            <th scope="col">É admin</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each usuarios}}
                        <tr>
                            <td>{{nome}}</td>
                            <td>{{email}}</td>
                            <td>{{#if eAdmin}}
                                admin: <strong>sim </strong>
                                {{else}}
                                admin: <strong>não </strong>
                                {{/if}}
                            </td>
                            <td><a href="/admin/usuario/edit/{{_id}}"><button class="btn btn-secondary btn-sm">Editar</button></a>
                            <form action="/admin/usuario/deletar" method="POST">
                                    <input type="hidden" name="id" value="{{_id}}">
                                    <button type="submit" class="btn btn-danger btn-sm"  id="btn-editUsuario">Deletar</button>
                            </form> 
                            </td>
                            {{else}}
                            {{/each}}
                        </tr>
                    </tbody>
                </table>
            </div>

            <br>
        </div>
</div>