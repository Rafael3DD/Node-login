{{#each usuarios}} <!--erros--> 

    <div class="card mt-4">
        <div id="admin">
               {{#if eAdmin}}
                    admin: <strong>sim </strong>
                {{else}}
                    admin: <strong>n√£o </strong>
                {{/if}}
        </div>

        <div class="card-body" id="usuario">
            <h4>{{this.nome}}</h4> <!--Mostra o nome da categoria-->
            <small><strong>Nome:</strong> {{nome}}</small>
            <br>
            <small><strong>Email:</strong> {{email}}</small> <br>
