<h4 id="titulo-login">Login:</h4>
<div class="card w-50" id="login"> 
    <div class="card-body">
        <form action="/usuario/login" method="POST">
            
            <label for="email"> Email: </label>
                <input type="text" name="email" class="form-control" placeholder="email ou usuario">

           
            <label for="senha"> Senha: </label>
                <input type="password" name="senha" class="form-control" placeholder="Senha">
            

            <button id="botao" type="submit" class="btn btn-success mt-2">Logar</button>
        </form>
    </div>
</div>


