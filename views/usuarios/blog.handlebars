{{#each postagens}}
    
    <div id="publicacoes">
        <div class="pub-area">
            <div class="container-fluid mt-5">
                 <div class="row">
                     {{/each}} 
                                <div id="lateral" class="col-md-3">
                                    <h6>Pesquisar</h6>
                                    <form action="/usuario/PesqPostagem" method="post">
                                        <input type="text" name="txtPesquisa" id="pesquisar">
                                        <input type="submit" value="Pesquisar" class="btn-pesquisar widget widget_block widget_search">
                                    </form>

                                    <h1>Pots Recentes</h1>
                                    {{#each postagens}}
                                        <!--passar os titulos como link -->
                                        <a href="/usuario/blog/lista/{{_id}}"><p>{{this.titulo}}</p></a>
                                        {{else}}
                                        <p>Nenhuma postagem a mostrar</p>
                                    {{/each}}
                                    <h1>Comentários Recentes</h1>
                                    {{#each comentarios}}
                                        {{nome}}
                                        <!--passar os titulos como link -->
                                        <a href="/usuario/blog/lista/{{_id}}"><p>{{comentario}}</p></a>
                                        {{else}}
                                        <p>Nenhuma comentario a mostrar</p>
                                    {{/each}}
                                    <!--passar os comentario recentes -->
                                </div>
                            {{#each postagens}}
                    <div class="col-md-9">   
                            <a href="/usuario/listaCategoria/{{categoria._id}}"><p class="categoria">{{categoria.nome}}</p></a>

                            <a href="/usuario/blog/lista/{{_id}}"><h3>Título: {{this.titulo}}</h3></a>

                            
                            <span class="postado-em">Publicado em {{#formatDate this.data}}{{/formatDate}}</span>

                            <a href="/usuario/blog/lista/{{_id}}"><small><img src="/upload/{{this.img}}" alt="" id="imagem"></small></a> 

                            <div id="previa">
                            <p>{{this.conteudo}}</p>
                            </div>
                            <hr>
                    </div>
                    
                </div> 
            </div> 
        </div>
    </div>        

{{else}}
    <p>Nenhuma postagem registrada</p>
{{/each}}


{{#each array}}
    {{@index}}: {{this}}
    rewrwe
{{/each}}
<!--paginação-->
    <nav aria-label="Page navigation example" id="nav-paginacao">
        <ul class="pagination justify-content-center">

            <li class="page-item">
                <form method='post' action='/usuario/blog' >
                    <input type="hidden" name="valor" value="0"/>
                    <button  class="page-link" id="btn-inicio" type='submit'>Início</button>
                </form>   
            </li>
           
            <!--Botões da paginação-->
            <div id="paginacao">   
                
            </div>
     
            <li class="page-item"><!--ultima pagina-->
                <form method='post' action='/usuario/blog'>
                    <input type="hidden" name="valor" value="{{final}}"/>
                    <button  class="page-link" id="btn-final" type='submit'>Final</button>
                </form> 
            </li>
        </ul>
    </nav>



<form action="#">
  <input type="hidden" id="numtotalpagina" name="numtotalpagina" value="{{numtotalpagina}}">
  <input type="hidden" id="numtotal" name="numtotal" value="{{numtotal}}">
  <input type="hidden" id="send" value="Enviar">
</form>
